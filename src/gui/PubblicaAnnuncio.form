<?xml version="1.0" encoding="UTF-8"?>
<form xmlns="http://www.intellij.com/uidesigner/form/" version="1" bind-to-class="gui.PubblicaAnnuncio">
  <grid id="27dc6" binding="mainPanel" layout-manager="GridLayoutManager" row-count="7" column-count="2" same-size-horizontally="false" same-size-vertically="false" hgap="10" vgap="10">
    <margin top="20" left="20" bottom="20" right="20"/>
    <constraints>
      <xy x="20" y="20" width="500" height="450"/>
      <minimum-size width="450" height="400"/>
    </constraints>
    <properties/>
    <border type="none"/>
    <children>
      
      <!-- TITOLO VIEW -->
      <component id="lblTitle" class="javax.swing.JLabel">
        <constraints>
          <grid row="0" column="0" row-span="1" col-span="2" vsize-policy="0" hsize-policy="0" anchor="0" fill="0" indent="0" use-parent-layout="false"/>
        </constraints>
        <properties>
          <font size="18" style="1"/>
          <text value="Crea Nuovo Annuncio"/>
        </properties>
      </component>

      <!-- CAMPO TITOLO -->
      <component id="lblTitolo" class="javax.swing.JLabel">
        <constraints>
          <grid row="1" column="0" row-span="1" col-span="1" vsize-policy="0" hsize-policy="0" anchor="8" fill="0" indent="0" use-parent-layout="false"/>
        </constraints>
        <properties>
          <text value="Titolo:"/>
        </properties>
      </component>
      <component id="txtTitolo" class="javax.swing.JTextField" binding="txtTitolo">
        <constraints>
          <grid row="1" column="1" row-span="1" col-span="1" vsize-policy="0" hsize-policy="6" anchor="8" fill="1" indent="0" use-parent-layout="false">
            <preferred-size width="150" height="-1"/>
          </grid>
        </constraints>
        <properties/>
      </component>

      <!-- CAMPO DESCRIZIONE -->
      <component id="lblDesc" class="javax.swing.JLabel">
        <constraints>
          <grid row="2" column="0" row-span="1" col-span="1" vsize-policy="0" hsize-policy="0" anchor="9" fill="0" indent="0" use-parent-layout="false"/>
        </constraints>
        <properties>
          <text value="Descrizione:"/>
        </properties>
      </component>
      <scrollpane id="scrollDesc">
        <constraints>
          <grid row="2" column="1" row-span="1" col-span="1" vsize-policy="7" hsize-policy="7" anchor="0" fill="3" indent="0" use-parent-layout="false">
            <preferred-size width="-1" height="100"/>
          </grid>
        </constraints>
        <properties/>
        <border type="none"/>
        <children>
          <component id="txtDescrizione" class="javax.swing.JTextArea" binding="txtDescrizione">
            <properties>
              <lineWrap value="true"/>
              <wrapStyleWord value="true"/>
            </properties>
          </component>
        </children>
      </scrollpane>

      <!-- CATEGORIA -->
      <component id="lblCat" class="javax.swing.JLabel">
        <constraints>
          <grid row="3" column="0" row-span="1" col-span="1" vsize-policy="0" hsize-policy="0" anchor="8" fill="0" indent="0" use-parent-layout="false"/>
        </constraints>
        <properties>
          <text value="Categoria:"/>
        </properties>
      </component>
      <component id="cmbCategoria" class="javax.swing.JComboBox" binding="cmbCategoria">
        <constraints>
          <grid row="3" column="1" row-span="1" col-span="1" vsize-policy="0" hsize-policy="2" anchor="8" fill="1" indent="0" use-parent-layout="false"/>
        </constraints>
        <properties/>
      </component>

      <!-- TIPO ANNUNCIO -->
      <component id="lblTipo" class="javax.swing.JLabel">
        <constraints>
          <grid row="4" column="0" row-span="1" col-span="1" vsize-policy="0" hsize-policy="0" anchor="8" fill="0" indent="0" use-parent-layout="false"/>
        </constraints>
        <properties>
          <text value="Tipo Annuncio:"/>
        </properties>
      </component>
      <component id="cmbTipo" class="javax.swing.JComboBox" binding="cmbTipo">
        <constraints>
          <grid row="4" column="1" row-span="1" col-span="1" vsize-policy="0" hsize-policy="2" anchor="8" fill="1" indent="0" use-parent-layout="false"/>
        </constraints>
        <properties/>
      </component>

      <!-- PREZZO -->
      <component id="lblPrezzo" class="javax.swing.JLabel">
        <constraints>
          <grid row="5" column="0" row-span="1" col-span="1" vsize-policy="0" hsize-policy="0" anchor="8" fill="0" indent="0" use-parent-layout="false"/>
        </constraints>
        <properties>
          <text value="Prezzo (€):"/>
        </properties>
      </component>
      <component id="txtPrezzo" class="javax.swing.JTextField" binding="txtPrezzo">
        <constraints>
          <grid row="5" column="1" row-span="1" col-span="1" vsize-policy="0" hsize-policy="6" anchor="8" fill="1" indent="0" use-parent-layout="false">
             <preferred-size width="150" height="-1"/>
          </grid>
        </constraints>
        <properties>
           <enabled value="false"/>
           <toolTipText value="Abilitato solo se Tipo Annuncio è VENDITA"/>
        </properties>
      </component>
      
      <!-- BOTTONI: Carica Img e Pubblica -->
      <grid id="pnlButtons" layout-manager="GridLayoutManager" row-count="1" column-count="2" same-size-horizontally="false" same-size-vertically="false" hgap="10" vgap="0">
        <margin top="10" left="0" bottom="0" right="0"/>
        <constraints>
          <grid row="6" column="0" row-span="1" col-span="2" vsize-policy="1" hsize-policy="3" anchor="0" fill="3" indent="0" use-parent-layout="false"/>
        </constraints>
        <properties/>
        <border type="none"/>
        <children>
           <!-- ECCO IL BOTTONE CHE MANCAVA -->
           <component id="btnCaricaImg" class="javax.swing.JButton" binding="btnCaricaImg">
            <constraints>
              <grid row="0" column="0" row-span="1" col-span="1" vsize-policy="0" hsize-policy="3" anchor="0" fill="1" indent="0" use-parent-layout="false"/>
            </constraints>
            <properties>
              <text value="Carica Immagini..."/>
            </properties>
          </component>

          <component id="btnPubblica" class="javax.swing.JButton" binding="btnPubblica">
            <constraints>
              <grid row="0" column="1" row-span="1" col-span="1" vsize-policy="0" hsize-policy="3" anchor="0" fill="1" indent="0" use-parent-layout="false"/>
            </constraints>
            <properties>
              <text value="Pubblica Annuncio"/>
              <font style="1"/>
            </properties>
          </component>
        </children>
      </grid>

    </children>
  </grid>
</form>